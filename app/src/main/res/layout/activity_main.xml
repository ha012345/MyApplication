<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <Button
            android:id="@+id/move_to_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommend"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/move_to_Like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Like"
            android:layout_marginTop="47.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/move_to_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friend"
            android:layout_marginTop="95dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/addgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_marginTop="142.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">


    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/horizonScroll"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/main_page1"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/title_home"
                android:textAlignment="center"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/main_page2"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="@string/title_dashboard"/>
            <TextView
                android:id="@+id/main_page3"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="@string/title_notifications"/>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>